block variables

unless append
	doctype html
	html(lang="en")
		head

		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')

		block title
			title Bungusland

		link(rel='icon', href='images/favicon.png#{ver}', type='image/x-icon')
		link(rel='shortcut icon', href='images/favicon.png#{ver}', type='image/x-icon')
		link(rel='stylesheet', href='/styles/main.css#{ver}')
		unless mobile
			link(rel='stylesheet', href='/styles/animation.css#{ver}')

		script(src='/scripts/jquery-2.2.0.js#{ver}')
		script(src='/scripts/jquery.wait-for-images.js#{ver}')
		script(src='/scripts/mousetrap.js#{ver}')
		script(src='/scripts/soundcloud-api.js#{ver}')
		script(src='/scripts/bootstrap.js#{ver}')
		script(src='/scripts/bungus.js#{ver}')

		body
			#webload
				img(src="images/overlay_webload.gif#{ver}")
			#fixed-content.hidden.container
				block fixed
			#modal

			unless mobile
				#music.hidden
					audio(loop)
						source(src="content/Bungusland_Overture.mp3" type="audio/mpeg")

			#scroll-content.hidden.container
				block scroll
			block body
else
	block scroll
